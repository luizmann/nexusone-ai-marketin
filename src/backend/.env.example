# NexusOne Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
JWT_EXPIRY=7d

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Configuration
DATABASE_URL=your-supabase-database-connection-string

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
DID_API_KEY=your-did-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
REPLICATE_API_TOKEN=your-replicate-api-token
RUNWARE_API_KEY=your-runware-api-key

# Social Media API Keys
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# Media API Keys
PEXELS_API_KEY=your-pexels-api-key
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# E-commerce API Keys
CJ_DROPSHIPPING_EMAIL=your-cj-email
CJ_DROPSHIPPING_API_KEY=your-cj-api-key
DSERS_API_KEY=your-dsers-api-key
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret

# Payment Processing
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@nexusone.ai
FROM_NAME=NexusOne Team

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Webhook URLs
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-whatsapp-verify-token

# Background Jobs
JOB_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=2000

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_API_KEY=your-analytics-api-key

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=nexusone-uploads

# Additional Security
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,yourdomain.com
SESSION_SECRET=your-session-secret-key

# Feature Flags
ENABLE_BACKGROUND_JOBS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_ERROR_REPORTING=true

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true